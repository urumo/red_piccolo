<section class="section">
  <div class="container">
    <%= form_tag(settings_url, method: :patch) do %>
      <h1 class="title has-text-centered"><%= @user.full_name %></h1>

      <div class="field">
        <%= label_tag :email, nil, class: 'label' %>........................
        <%= email_field_tag :email, @user.email, class: 'tui-input', placeholder: 'Enter your Email', readonly: !@editable %>
      </div>

      <div class="field">
        <%= label_tag :first_name, nil, class: 'label' %>...................
        <%= text_field_tag :first_name, @user.first_name, class: 'input', placeholder: 'Enter your first name', readonly: !@editable %>
      </div>

      <div class="field">
        <%= label_tag :last_name, nil, class: 'label' %>....................
        <%= text_field_tag :last_name, @user.last_name, class: 'input', placeholder: 'Enter your last name', readonly: !@editable %>
      </div>

      <div class="field">
        <%= label_tag "Date of Birth", nil, class: 'label' %>................
        <%= date_field_tag :date_of_birth, @user.date_of_birth, class: 'input', readonly: !@editable %>
      </div>

      <% if @editable %>
        <h6 class="has-text-centered">Change your password(leave blank to skip)</h6>
        <div class="field">
          <%= label_tag :old_password, nil, class: 'label' %>.................
          <%= password_field_tag :old_password, nil, class: 'input', placeholder: 'Enter your password' %>
        </div>
        <div class="field">
          <%= label_tag :new_password, nil, class: 'label' %>.................
          <%= password_field_tag :new_password, nil, class: 'input', placeholder: 'Enter your new password' %>
        </div>
        <div class="field">
          <%= label_tag :new_password_confirmation, nil, class: 'label' %>....
          <%= password_field_tag :new_password_confirmation, nil, class: 'input', placeholder: 'Confirm your new password' %>
        </div>

        <div class="field">
          <div class="control">
            <%= submit_tag 'Edit', class: 'tui-button' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>