<section class="hero is-fullheight is-primary">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-one-third">
          <div class="box">
            <h1 class="title has-text-centered">Login</h1>

            <%= form_tag(login_path) do %>
              <div class="field">
                <%= label_tag :email, nil, class: 'label' %>
                <div class="control">
                  <%= email_field_tag :email, nil, class: 'input', placeholder: 'Enter your email' %>
                </div>
              </div>

              <div class="field">
                <%= label_tag :password, nil, class: 'label' %>
                <div class="control">
                  <%= password_field_tag :password, nil, class: 'input', placeholder: 'Enter your password' %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= submit_tag 'Login', class: 'button is-primary is-fullwidth' %>
                </div>
              </div>
            <% end %>
            <p class="has-text-centered">
              Don't have an account? <a href='?form_action=register'>Sign up</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>